{
  "name": "flamingo",
  "version": "2.1.2",
  "description": "simple, hapijs based, HTTP server that allows you to convert media files to images",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "typecheck": "node_modules/.bin/flow check",
    "lint": "node node_modules/eslint/bin/eslint.js index.js config.js test src targets tutorials",
    "predocs": "rm -r docs 2>/dev/null || true",
    "docs": "node node_modules/jsdoc/jsdoc.js index.js config.js src -r -u tutorials -t ./node_modules/postman-jsdoc-theme -P package.json -R README.md -d docs",
    "pretest": "npm run lint && npm run typecheck",
    "test": "TEST=true npm run cover",
    "preversion": "npm test",
    "bench": "node targets/bench",
    "formats": "node targets/formats",
    "precover": "rm -r coverage 2>/dev/null || true",
    "cover": "nyc mocha",
    "release": "standard-version"
  },
  "author": "Christian",
  "license": "MIT",
  "engines": {
    "node": ">=6"
  },
  "bugs": {
    "url": "https://github.com/piobyte/flamingo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piobyte/flamingo"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "boom": "^5.1.0",
    "buffer-peek-stream": "^1.0.1",
    "bunyan": "^1.8.4",
    "clamp": "^1.0.1",
    "file-type": "^4.0.0",
    "fluent-ffmpeg": "^2.1.0",
    "got": "^6.3.0",
    "hapi": "^16.4.0",
    "is-stream": "^1.1.0",
    "lodash": "^4.16.2",
    "mimeparse": "^0.1.4",
    "mkdirp": "^0.5.0",
    "optional": "^0.1.3",
    "sharp": "^0.18.1",
    "temp": "^0.8.3",
    "through2": "^2.0.3"
  },
  "devDependencies": {
    "benchmark": "^2.1.1",
    "eslint": "^3.13.1",
    "flow-bin": "^0.47.0",
    "jsdoc": "^3.4.2",
    "mocha": "^3.1.2",
    "nock": "^9.0.0",
    "nyc": "^11.0.2",
    "postman-jsdoc-theme": "0.0.2",
    "sinon": "^1.17.5",
    "standard-version": "^4.0.0",
    "uuid": "^3.0.1"
  },
  "optionalDependencies": {
    "gm": "^1.23.0",
    "markdown-it": "^8.0.1",
    "memwatch-next": "^0.3.0",
    "screenshot-stream": "^4.1.0",
    "webshot": "makepanic/node-webshot#1ddeb1f396f1de14480d53e017e0b14ee0304e28"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 96,
    "statements": 96,
    "functions": 96,
    "branches": 90,
    "reporter": [
      "text-summary",
      "html"
    ],
    "include": [
      "src/**/*.js",
      "test/**/*.js",
      "tutorials/**/*.js"
    ],
    "exclude": [
      "src/profiles/debug.js",
      "src/writer/file.js"
    ],
    "all": true
  }
}
