{
  "name": "flamingo",
  "version": "1.0.0-rc.4",
  "description": "simple, hapijs based, HTTP server that allows you to convert media files to images",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",

    "typecheck": "command -v flow >/dev/null 2>&1 && flow check || { echo \"flow command not available, skipping type checking\" >&2; }",
    "lint": "node node_modules/eslint/bin/eslint.js index.js test src",

    "predocs": "rm -r docs",
    "docs": "node node_modules/jsdoc/jsdoc.js index.js config.js src -r --template node_modules/jsdoc-baseline --package package.json -R README.md -d docs",

    "pretest": "npm run lint && npm run typecheck",
    "test": "TEST=true npm run cover",

    "bench": "node targets/bench",

    "precover": "rm -r coverage",
    "cover": "node node_modules/istanbul/lib/cli.js cover node_modules/mocha/bin/_mocha -- -b --recursive -R dot -c",
    "postcover": "node node_modules/istanbul/lib/cli.js check-coverage"
  },
  "author": "Christian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/piobyte/flamingo/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piobyte/flamingo"
  },
  "dependencies": {
    "boom": "^2.6.1",
    "bunyan": "^1.0.1",
    "clamp": "^1.0.1",
    "fluent-ffmpeg": "^2.0.1",
    "gm": "^1.18.1",
    "hapi": "^8.5.3",
    "lodash": "^3.1.0",
    "mimeparse": "^0.1.4",
    "mkdirp": "^0.5.0",
    "ratify": "^0.8.0",
    "request": "^2.56.0",
    "rsvp": "^3.0.13",
    "sharp": "^0.10.0",
    "temp": "^0.8.1",
    "through2": "^0.6.3"
  },
  "devDependencies": {
    "benchmark": "^1.0.0",
    "eslint": "^0.22.1",
    "istanbul": "^0.3.2",
    "jsdoc": "^3.3.0-beta3",
    "jsdoc-baseline": "https://github.com/hegemonic/baseline/tarball/master",
    "mocha": "^2.2.1",
    "nock": "^2.3.0",
    "sinon": "^1.14.1"
  }
}
